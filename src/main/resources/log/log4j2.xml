<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	threshold="null" debug="null">
	<appender name="CONSOLE" class="com.dianping.combiz.misc.ExtendedConsoleAppender">
		<param name="Target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[activity-filter-job]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/activity-filter-job/logs/avatar.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[activity-filter-job]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/activity-filter-job/logs/app.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[activity-filter-job]%d %-5p [%c] %m%n" />
		</layout>
	</appender>
	
	<appender name="ibatisAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/activity-filter-job/logs/ibatis.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[activity-filter-job]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<logger name="com.dianping.avatar" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="avatarAppender" />
	</logger>
	
	<logger name="com.ibatis" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="ibatisAppender" />
	</logger>

	<logger name="java.sql">
		<level value="DEBUG" />
		<appender-ref ref="ibatisAppender" />
	</logger>
	
	<logger name="org.springframework.jms">
		<level value="ERROR" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="appAppender" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="appAppender" />
	</logger>
	
	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="appAppender" />
	</root>

</log4j:configuration>
